<div class="m-2 mt-5 d-flex justify-content-between align-items-center">
  <h1 class="text-dark">COCKTAILS BOOK</h1>
  <%= link_to new_cocktail_path, class: 'btn btn-primary rounded' do %>
    <span><i class="fas fa-plus-circle"></i> Add New Cocktail</span>
  <% end %>
</div>
<div class="m-2 rounded shadow p-2 bg-dark">
  <div class="m-1 row row-cols-1 row-cols-md-3">
    <% @cocktails.each do |cocktail| %>
      <div class="col my-4" data-aos="fade-up" data-aos-duration="750">
        <div class="card h-100">
          <%= link_to cocktail_path(cocktail) do %>
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key, alt: "#{cocktail.name} pic", width: 320, height: 240, class: "card-img-top" %>
            <% else %>
              <%= image_tag "no-image.png", alt: "#{cocktail.name} pic", width: 320, height: 240, class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= cocktail.name %></h5>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
