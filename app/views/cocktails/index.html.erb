<div class="m-2 mt-5 d-flex justify-content-between align-items-center">
  <h1 class="text-dark">COCKTAILS BOOK</h1>
  <%= link_to new_cocktail_path, class: 'btn btn-primary rounded' do %>
    <span><i class="fas fa-plus-circle"></i> Add New Cocktail</span>
  <% end %>
</div>
<div class="m-2 rounded shadow p-2 bg-dark row justify-content-center">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail) do %>
        <div class="col-3 m-3" data-aos="fade-up" data-aos-duration="750">
        <div class="card" style="width: 18rem;">

          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 240, width: 360, crop: :fit %>
          <% else %>
            <%= image_tag "https://loremflickr.com/g/320/240/#{cocktail.name}", alt: "#{cocktail.name} pic", width: 320, height: 240, class: "card-img-top" %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
          </div>
        </div>
        </div>
    <% end %>
  <% end %>
</div>
